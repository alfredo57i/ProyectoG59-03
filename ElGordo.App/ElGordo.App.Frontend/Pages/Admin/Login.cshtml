@page
@model ElGrodo.App.Frontend.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="collapse navbar-collapse d-flex justify-content-center mt-5" id="navbarSupportedContent">    
    <div class="col-md-4 border rounded p-4 shadow-sm">
        <h4 class="mb-4 mt-3 text-primary">Iniciar Sesión</h4>
         @Html.Raw(@ViewData["Respuesta"])
        <form class="form col" method="POST">
            <div class="form-group row">
                <input name="usuario" class="form-control" placeholder="Usuario">
            </div>
            <div class="form-group row">
                <input type="password" name="password" class="form-control" placeholder="Contraseña">
            </div>
            <div class="form-group row">
                <button class="btn btn-primary" type="submit">Entrar</button>
            </div>
        </form>
    </div>
</div>
